<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#22222A">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22222A">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22222A"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/receiver_messsage_layout">

                <TextView
                    android:id="@+id/receiver_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/farsan"
                    android:padding="5dp"
                    android:text="receiver message"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/receiver_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/receiver_message_text"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/farsan"
                    android:layout_marginTop="-5dp"
                    android:padding="2dp"
                    android:text="receiver message"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/sender_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="@+id/re"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sender_message_layout"
                android:fontFamily="@font/farsan"
                android:padding="5dp"
                android:text="sender message"
                android:textSize="14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
